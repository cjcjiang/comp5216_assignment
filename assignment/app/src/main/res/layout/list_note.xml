<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/note_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"/>

    <TextView
        android:id="@+id/note_timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timeTextView"
        android:textSize="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/note_image_view"
        android:layout_toEndOf="@+id/note_image_view"
        android:gravity="right"
        android:textColor="#8E8E8E"/>

    <TextView
        android:text="alertTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alertTimeTextView"
        android:layout_alignBottom="@+id/note_image_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/note_image_view"
        android:layout_toEndOf="@+id/note_image_view"
        android:textColor="#8E8E8E"
        android:gravity="right"
        android:textSize="10dp"/>

    <TextView
        android:text="@string/messageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="14dp"
        android:id="@+id/note_messageTextView"
        android:textColor="#000000"
        android:layout_below="@+id/note_titleTextView"
        android:layout_toRightOf="@+id/note_image_view"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/editshape"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/alertTimeTextView" />

    <TextView
        android:id="@+id/note_titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titleTextView"
        android:textSize="22dp"
        android:gravity="center_horizontal"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/note_messageTextView"
        android:layout_alignStart="@+id/note_messageTextView"
        android:layout_below="@+id/note_timeTextView" />

</RelativeLayout>